{
  "compilerOptions": {
    "allowJs": true,
    // "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    // "noEmit": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"]
}
