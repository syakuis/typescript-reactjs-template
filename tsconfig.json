{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "isolatedModules": true,
    "module": "commonjs",
    "noEmit": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
